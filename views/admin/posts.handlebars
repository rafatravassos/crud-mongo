<h2>Posts list</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{category.name}}</h6>
            <h7 class="card-subtitle mb-2 text-body-secondary">Slug: {{slug}}</h7><br>
            <h7 class="card-subtitle mb-2 text-body-secondary">{{description}}</h7>
            <p class="card-text">{{content}}</p>
            <small>Date: {{date}}</small><br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-4">Edit post</button></a>
            <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-4">Delete post</button></a>

        </div>
    </div>
{{else}}
    <h4 class="mt-3">There is no posts on database.</h4>

{{/each}}

